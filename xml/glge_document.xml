<glge>
  <mesh id="groundMesh">
    <positions>1.000,1.000,0.000,-1.000,1.000,0.000,-1.000,-1.000,0.000,1.000,1.000,0.000,-1.000,-1.000,0.000,1.000,-1.000,0.000</positions>
    <normals>-0.000,0.000,1.000,-0.000,0.000,1.000,-0.000,0.000,1.000,0.000,-0.000,1.000,0.000,-0.000,1.000,0.000,-0.000,1.000</normals>;
    <uv1>0.000,0.000,1.000,0.000,1.000,1.000,0.000,0.000,1.000,1.000,0.000,1.000</uv1>
    <faces>0,1,2,3,4,5,</faces>
  </mesh>
  <mesh id="xline">
    <positions>
      -1000.0,0,0, 1000.0,0,0
    </positions>
  </mesh>
  <mesh id="yline">
    <positions>
      0,-1000,0, 0,1000,0
    </positions>
  </mesh>
  <mesh id="zline">
    <positions>
      0,0,-1000, 0,0,1000
    </positions>
  </mesh>

  <material id="selectMat" specular="0" emit="green">
    <texture id="selectTex" src="select.png" />
    <material_layer texture="#selectTex" mapinput="UV1" mapto="M_COLOR" />
    <material_layer texture="#selectTex" mapinput="UV1" mapto="M_ALPHA" />
  </material>

  <material id="red" specular="0" color="#f00" shadeless="1" />
  <material id="green" specular="0" color="#0f0" shadeless="1" />
  <material id="blue" specular="0" color="#00f" shadeless="1" />
  <material id="lines" specular="0" color="#777" shadeless="1" />
  <material id="highlight" specular="0" color="#ff0" shadeless="0" emit="#550" />

  <animation_vector id="pulse" frames="24">
    <animation_curve channel="Scale">
      <linear_point x="0.0" y="0.01" />
      <linear_point x="12" y="2.2" />
      <linear_point x="24" y="0.01" />
    </animation_curve>
  </animation_vector>
  <animation_vector id="flow" frames="10">
    <animation_curve channel="OffsetY">
      <linear_point x="0.0" y="-1" />
      <linear_point x="10.0" y="1.0" />
    </animation_curve>
  </animation_vector>

  <animation_vector id="bob" frames="120">
    <animation_curve channel="DRotX">
      <linear_point x="1" y="0" />
      <linear_point x="30" y=".4" />
      <linear_point x="60" y="0" />
      <linear_point x="90" y=".4" />
      <linear_point x="120" y="0" />
    </animation_curve>
    <animation_curve channel="LocZ">
      <linear_point x="1" y="-.3" />
      <linear_point x="30" y="0" />
      <linear_point x="60" y="-.3" />
      <linear_point x="90" y="0" />
      <linear_point x="120" y="-.3" />
    </animation_curve>
  </animation_vector>

  <animation_vector id="disappear" frames="10">
    <animation_curve channel="Scale">
      <linear_point x="0" y="0.01" />
      <linear_point x="3" y="0.013" />
      <linear_point x="10" y="0" />
    </animation_curve>
  </animation_vector>

  <scene id="mainscene" ambient_color="#333" background_color="#888" fog_near="50" fog_far="60" fog_color="#555" fog_type="FOG_LINEAR" camera="#mainCamera">
    <group id="graph">
      <object id="xaxis" draw_type="DRAW_LINES" line_width="2" mesh="#xline" material="#red" />
      <object id="yaxis" draw_type="DRAW_LINES" line_width="2" mesh="#yline" material="#green" />
      <object id="zaxis" draw_type="DRAW_LINES" line_width="2" mesh="#zline" material="#blue" />
    </group>
    <group id="cameraOffset">
      <camera id="mainCamera" loc_z="20" loc_y="2.2" loc_x="0" rot_x="0" rot_y="0" />
    </group>
    <group id="cusrsor" loc_x="0" loc_z="0">
      <object mesh="#groundMesh" material="#selectMat" animation="#pulse" ztransparent="TRUE" rot_x="1.57" loc_y="0" scale="1.5" />
    </group>

    <light id="light" loc_x="0" loc_y="20" loc_z="10" rot_x="0" rot_y="1.57" attenuation_constant="0.9" type="L_DIR" />
    <light id="light" loc_x="-10" loc_y="20" loc_z="-5" rot_x="-1.3" attenuation_constant="5" type="L_POINT" />
    <light id="light" loc_x="-10" loc_y="20" loc_z="10" rot_x="-1.3" attenuation_constant="5" type="L_POINT" />
  </scene>
</glge>
